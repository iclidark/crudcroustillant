{% extends 'base.html.twig' %}

{% block title %}Détails du Burger - CRUDcroustillant{% endblock %}

{% block body %}
    <h1>Détails du burger</h1>

    {% if burger %}
        <h2>{{ burger.nom }}</h2>
        <p>{{ burger.description }}</p>
        <p><strong>ID :</strong> {{ id }}</p>
    {% else %}
        <p>⚠️ Burger avec l’ID {{ id }} non trouvé.</p>
    {% endif %}

    <a href="{{ path('burger_list') }}" class="btn btn-primary mt-3">← Retour à la liste</a>
{% endblock %}
